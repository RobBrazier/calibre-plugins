{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":approveMajorUpdates",
		":semanticCommits",
		":rebaseStalePrs",
		":maintainLockFilesWeekly",
		":assignAndReview(RobBrazier)",
		"helpers:pinGitHubActionDigests",
		"schedule:weekends",
		":prConcurrentLimit10",
		":prHourlyLimit2"
	],
	"packageRules": [
		{
			"matchDatasources": [
				"pypi"
			],
			"matchFileNames": [
				"**/pyproject.toml"
			],
			"labels": [
				"dependencies",
				"python"
			]
		},
		{
			"matchManagers": [
				"github-actions"
			],
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"labels": [
				"dependencies",
				"github-actions"
			]
		}
	]
}
